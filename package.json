{
  "name": "graphly",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.graphly.name",
    "productName": "Graphly",
    "icon": "assets/icons/app-icon",
    "asar": true,
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "extraResources": [
      "graphly_requirements.txt",
      { "from": "wheels", "to": "wheels", "filter": ["**/*"] },
      { "from": "python", "to": "python", "filter": ["**/*.py","**/*.txt","**/*.pkl"] }
    ],
    "win": {
      "icon": "assets/logo-circle.ico"
    },
    "mac": {
      "icon": "assets/logo-circle.icns"
    },
    "linux": {
      "icon": "assets/icons"
    }
  },
  "keywords": [
    "Node.js",
    "Electron",
    "Data Visualization",
    "Community Detection",
    "Graph Analysis",
    "Graphology"
  ],
  "author": "Leticia Tavares",
  "license": "ISC",
  "description": "Desktop application to help with data visualization, transform grid-like data into graphs and to perform community detection.",
  "devDependencies": {
    "electron": "^34.2.0"
  },
  "dependencies": {
    "apexcharts": "^4.5.0",
    "danfojs": "^1.2.0",
    "papaparse": "^5.5.2"
  }
}
