{
  "name": "graphly",
  "version": "1.1.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.graphly.name",
    "productName": "Graphly",
    "icon": "assets/icons/app-icon",
    "asar": true,
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "extraResources": [
      "requirements.txt",
      {
        "from": "wheels",
        "to": "wheels",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "python",
        "to": "python",
        "filter": [
          "**/*.py",
          "**/*.txt",
          "**/*.pkl"
        ]
      }
    ],
    "win": {
      "icon": "assets/logo-circle.ico"
    },
    "mac": {
      "icon": "assets/logo-circle.icns"
    },
    "linux": {
      "icon": "assets/icons"
    }
  },
  "keywords": [
    "Node.js",
    "Electron",
    "Data Visualization",
    "Community Detection",
    "Graph Analysis"
  ],
  "author": "Leticia Tavares",
  "license": "MIT",
  "description": "Application to help with data visualization, represent data as graphs and perform community detection.",
  "devDependencies": {
    "electron": "^34.2.0"
  },
  "dependencies": {
    "apexcharts": "^4.5.0",
    "gridjs": "^6.2.0",
    "papaparse": "^5.5.2"
  }
}
